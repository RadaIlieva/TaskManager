@{
    ViewData["Title"] = "Dashboard";
    var userName = User.Identity.Name; // This is just a placeholder. Replace it with actual user name retrieval logic.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #e0f7fa; /* Light baby blue */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            background-color: #b3e5fc; /* Slightly darker shade of blue */
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 20px;
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: black;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #ddd;
                }

            .sidebar .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #b3e5fc;
            color: white;
            padding: 10px 15px;
            border: none;
        }

            .openbtn:hover {
                background-color: #444;
            }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.5s;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #b3e5fc;
        }

            .header .user-info {
                display: flex;
                align-items: center;
            }

                .header .user-info img {
                    border-radius: 50%;
                    width: 40px;
                    height: 40px;
                    margin-right: 10px;
                    cursor: pointer;
                }

                .header .user-info .dropdown {
                    display: none;
                    position: absolute;
                    top: 60px;
                    right: 20px;
                    background-color: #fff;
                    box-shadow: 0 0 10px rgba(0,0,0,0.1);
                    padding: 10px;
                    border-radius: 5px;
                }

                .header .user-info:hover .dropdown {
                    display: block;
                }

        .project-cards {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .project-card {
            background-color: white;
            width: calc(33.333% - 20px);
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>

    <div class="sidebar" id="mySidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
        <!-- Add your sidebar options here -->
    </div>

    <div class="header">
        <button class="openbtn" onclick="openNav()">☰</button>
        <div class="user-info">
            <img src="https://via.placeholder.com/40" alt="User Profile Picture" id="userProfilePicture">
            <div>
                <span id="userName">@userName</span>
                <div class="dropdown">
                    <a href="/Home/Profile">Profile</a>
                </div>
            </div>
            <button onclick="location.href='/Home/NewProject'" class="btn btn-primary">New Project</button>
        </div>
    </div>

    <div class="main-content" id="mainContent">
        <h2>Welcome, @userName</h2>
        <div class="project-cards">
            <!-- Add your project cards here -->
        </div>
    </div>

    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("mainContent").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("mainContent").style.marginLeft = "0";
        }
    </script>

</body>
</html>
